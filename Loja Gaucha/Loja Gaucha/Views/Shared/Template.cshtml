<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Loja do Gaucho</title>
    <link href="~/Content/solar.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/sweetalert/sweetalert.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">

            @*###### HOME ########*@
            <div class="navbar-header">
                @Html.ActionLink("Loja do Gaucho", "HomeCliente", "Produto","", new { @class = "navbar-brand" })
            </div>
            <div class="nav navbar-collapse collapse">
                @*########### PRODUTOS/CATEGORIAS ########*@
                <ul class="nav navbar-nav">
                    <li> @Html.ActionLink("Produtos", "HomeCliente", "Produto")</li>
                    <li>@Html.ActionLink("Categorias", "Index", "Categoria") </li>
                </ul>
                @*########LOGIN/CADASTROS########*@
                <div class="collapse navbar-collapse ">
                    <ul class="nav navbar-nav navbar-right">
                        @if (Session["IdPessoa"] == null)
                        {


                        <li>@Html.ActionLink("Cadastro", "Create", "")</li>

                        <li>@Html.ActionLink("Login", "Login", "Pessoa")</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Logout","Logout","Pessoa")</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>
    <footer style="text-align:center">
        <p>
            &copy; @DateTime.Now.Year - Loja do Gaucho
        </p>
    </footer>

</body>
</html>
