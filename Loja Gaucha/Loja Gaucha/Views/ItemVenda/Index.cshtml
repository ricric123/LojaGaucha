<table class="table table-striped table-hover ">
    <tr>
        <th>
            Nome
        </th>
        <th>
            Valor Unitario
        </th>
        <th>
            Quantidade
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItemVendaProduto.ProdutoNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemVendaPreco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemVendaQuantidade)
            </td>
            <td>
                @Html.ActionLink("Detalhe do Produto", "ProdutoDetails", new { id = item.ItemVendaId }, new { @class = "btn btn-info" }) &nbsp; &nbsp;| &nbsp; &nbsp;
                @Html.ActionLink("Remover Produto", "Delete", new { id = item.ItemVendaId }, new { @class = "btn btn-warning" })
            </td>
        </tr>

    }
</table>

